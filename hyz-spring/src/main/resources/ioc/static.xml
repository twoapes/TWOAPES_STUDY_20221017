<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="getName" factory-bean="factory" factory-method="getName"/>
    <bean id="getTime" factory-bean="factory" factory-method="getAge"/>
    <bean id="factory" class="pojo.Student">
        <property name="name" value="ZhangSan"/>
        <property name="age" value="18"/>
    </bean>
    <bean id="static1" class="pojo.Static1"/>
    <bean id="static2" class="pojo.Static2"/>
    <bean id="static" class="pojo.Static">
        <property name="static1" ref="static1"/>
        <property name="static2" ref="static2"/>
    </bean>
</beans>
